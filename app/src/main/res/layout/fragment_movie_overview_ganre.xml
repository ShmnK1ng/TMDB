<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_movie_overview_genre"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    android:foreground="@drawable/card_border"
    app:cardElevation="@dimen/fragment_movie_overview_genre_elevation"
    android:layout_marginEnd="@dimen/fragment_movie_overview_genre_margin_end"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragment_movie_overview_genre_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_movie_overview_genre_text_view_text"
            android:textColor="@color/white"
            android:paddingStart="@dimen/fragment_movie_overview_genre_text_view_text_padding_start"
            android:paddingEnd="@dimen/fragment_movie_overview_genre_text_view_text_padding_end"
            android:padding="@dimen/fragment_movie_overview_genre_text_view_text_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>